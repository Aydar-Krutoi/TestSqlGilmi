<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TestSqlGilmi.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TestSqlGilmi.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Users">
	<Grid RowDefinitions="Auto, *, Auto">
		<StackPanel Grid.Row="0"
                   Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   Spacing="25"
                   Margin="10"
				   >
			<Button Content="Пользователь"
					x:Name="User_ClickBT"
					Click="Button_Click_1"
					Width="133" 
					Height="40"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					FontSize="16"
					FontWeight="Bold"
					/>
			
			<Button Content="Предмет"
					x:Name="Item_ClickBT"
					Click="Button_Click_2"
					Width="133" 
					Height="40"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					FontSize="16"
					FontWeight="Bold"/>
			
			<Button Content="Корзина"
					x:Name="Basket_ClickBT"
					Click="Button_Click_3"
					Width="133" 
					Height="40"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					FontSize="16"
					FontWeight="Bold"/>
		</StackPanel>

		<DataGrid Grid.Row="1"
                 ItemsSource="{Binding Users}"
                 IsReadOnly="True"
                 DoubleTapped="DataGrid_DoubleTapped"
                 Name="MainDataGridUsers">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Full Name" Binding="{Binding FullName}"/>
				<DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}"/>
				<DataGridTextColumn Header="Description" Binding="{Binding Descipition}"/>
				<DataGridTextColumn Header="Role" Binding="{Binding Roles.Name}"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Grid.Row="2"
                   HorizontalAlignment="Left"
                   Orientation="Horizontal"
                   Margin="10"
                   Spacing="10">
			<Button Content="Добавить" Click="Button_Click"/>
		</StackPanel>
	</Grid>
</Window>
